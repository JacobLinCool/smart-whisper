{
	"name": "smart-whisper",
	"version": "0.7.0",
	"description": "Whisper.cpp Node.js binding with auto model offloading strategy.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"keywords": [
		"whisper",
		"whisper.cpp",
		"native",
		"binding",
		"addon"
	],
	"author": "JacobLinCool <jacoblincool@gmail.com> (https://github.com/JacobLinCool)",
	"license": "MIT",
	"gypfile": true,
	"files": [
		"dist",
		"src",
		"scripts",
		"binding.gyp",
		"whisper.cpp/*.{c,h,cpp,m,cu,metal}",
		"whisper.cpp/Makefile",
		"whisper.cpp/LICENSE"
	],
	"scripts": {
		"prepare": "husky",
		"format": "prettier --ignore-path .gitignore --write .",
		"build": "tsup && node-gyp rebuild",
		"install": "node-gyp rebuild",
		"changeset": "changeset",
		"build:docs": "typedoc --out docs src/index.ts",
		"test": "vitest --dir test"
	},
	"dependencies": {
		"node-addon-api": "^8.2.0"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.5.0",
		"@changesets/cli": "^2.27.8",
		"@types/node": "^22.7.4",
		"@types/node-wav": "^0.0.3",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"node-wav": "^0.0.2",
		"prettier": "^3.3.3",
		"tsup": "^8.3.0",
		"tsx": "^4.19.1",
		"typedoc": "^0.26.7",
		"typescript": "^5.6.2",
		"vitest": "^2.1.1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/JacobLinCool/smart-whisper.git"
	},
	"homepage": "https://jacoblincool.github.io/smart-whisper/",
	"bugs": {
		"url": "https://github.com/JacobLinCool/smart-whisper/issues"
	},
	"lint-staged": {
		"*.{ts,js,json,yaml,yml}": [
			"prettier --write"
		]
	},
	"packageManager": "pnpm@9.11.0"
}
